<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgp"
                android:layout_width="20dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/plasticolo" />

            <ImageView
                android:id="@+id/imgl"
                android:layout_width="20dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/latalo" />

            <ImageView
                android:id="@+id/imgv"
                android:layout_width="20dp"
                android:layout_height="42dp"
                app:srcCompat="@drawable/vidriolo" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="Radioactive"
                android:textSize="13sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Imagine Dragons"
                android:textSize="11sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/editl2" />

            <Button
                android:id="@+id/eliminar"
                android:layout_width="33dp"
                android:layout_height="35dp"
                android:background="@drawable/deletel" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>